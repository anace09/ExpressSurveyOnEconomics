@model WebApp.ViewModels.MultipleChoiceQuestionViewModel

<div class="mt-3 d-flex flex-column gap-3">
    @for (int i = 0; i < Model.Options.Count; i++)
    {
        var opt = Model.Options[i];
        var id = $"mc_{Model.Id}_{i}";
        <div class="mc-option">
            <input type="radio"
                   name="answers[@Model.Id]"
                   id="@id"
                   value="@Model.OptionIndices[i]">
            <label class="mc-label" for="@id">
                @opt
            </label>
        </div>
    }
</div>
