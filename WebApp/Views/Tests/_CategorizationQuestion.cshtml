@model WebApp.ViewModels.CategorizationQuestionViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="mt-4 categorization">
    <div class="alert alert-light border mb-4 text-center">
        <strong>@Localizer["CategorizeTitle"]</strong><br />
        <small class="text-muted">@Localizer["CategorizeHint"]</small>
    </div>

    @if (Model.Terms == null || Model.Terms.Count == 0)
    {
        <div class="alert alert-warning">
            @Localizer["TermsNotLoaded"]
        </div>
    }
    else
    {
        <div class="row g-3 mb-5">
            <div class="col-md-6">
                <div class="category-box drop-zone" data-category="1">
                    <div class="category-header">@Model.Category1</div>
                    <div class="category-body"
                         ondrop="drop(event)"
                         ondragover="allowDrop(event)"
                         ondragenter="handleDragEnter(event)"
                         ondragleave="handleDragLeave(event)">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="category-box drop-zone" data-category="2">
                    <div class="category-header">@Model.Category2</div>
                    <div class="category-body"
                         ondrop="drop(event)"
                         ondragover="allowDrop(event)"
                         ondragenter="handleDragEnter(event)"
                         ondragleave="handleDragLeave(event)">
                    </div>
                </div>
            </div>
        </div>

        <div>
            <h6 class="text-center text-muted mb-3">@Localizer["Terms"]</h6>
            <div id="terms-list" class="terms-pool">
                @for (int i = 0; i < Model.Terms.Count; i++)
                {
                    <div class="term-item draggable"
                         draggable="true"
                         data-index="@Model.TermIndices[i]">
                        @Model.Terms[i]
                    </div>
                }
            </div>
        </div>

        <input type="hidden" name="categorizationAnswers" id="categorizationAnswers" />
    }
</div>