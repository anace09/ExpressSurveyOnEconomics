@using System.Globalization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.Name" class="scroll-smooth">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Тест знаний</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif'],
                    },
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-indigo-50 via-white to-blue-50 min-h-screen antialiased flex flex-col">
    <header class="sticky top-0 z-50 backdrop-blur-md bg-white/80 border-b border-gray-200/30 shadow-sm">
        <div class="max-w-7xl mx-auto px-5 sm:px-6 lg:px-8 py-3 flex items-center justify-between">
            <a href="/" class="text-2xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-purple-600 tracking-tight">
                @Localizer["Title"]
            </a>
            <div class="flex items-center gap-2.5">
                <a href="@Url.Action("Set", "Culture", new { culture = "ru", returnUrl = Context.Request.Path + Context.Request.QueryString })"
                   class="px-3.5 py-1.5 text-sm font-medium rounded-full transition-all duration-300
                          @(CultureInfo.CurrentUICulture.Name.StartsWith("ru") ? "bg-indigo-600 text-white shadow" : "text-gray-700 hover:bg-indigo-50 hover:text-indigo-700")">
                    Рус
                </a>
                <a href="@Url.Action("Set", "Culture", new { culture = "kk", returnUrl = Context.Request.Path + Context.Request.QueryString })"
                   class="px-3.5 py-1.5 text-sm font-medium rounded-full transition-all duration-300
                          @(CultureInfo.CurrentUICulture.Name.StartsWith("kk") ? "bg-indigo-600 text-white shadow" : "text-gray-700 hover:bg-indigo-50 hover:text-indigo-700")">
                    Қаз
                </a>
            </div>
        </div>
    </header>

    <main role="main" class="flex-grow flex items-center justify-center px-4 sm:px-6 lg:px-8">
        @RenderBody()
    </main>

    <footer class="border-t border-gray-200/30 bg-white/50 backdrop-blur-sm py-4 mt-auto">
        <div class="max-w-7xl mx-auto px-6 flex flex-col sm:flex-row items-center justify-between gap-3 text-sm text-gray-500">

            <div>
                © @DateTime.Now.Year • Karagandy
            </div>

            <div class="flex items-center gap-4">

                <a href="https://github.com/anace09"
                   target="_blank"
                   rel="noopener"
                   class="flex items-center gap-1.5 hover:text-indigo-600 transition-colors">

                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                         viewBox="0 0 24 24">
                        <path d="M12 .5C5.65.5.5 5.65.5 12a11.5 11.5 0 008 10.94c.58.1.79-.25.79-.56
                             0-.27-.01-1.15-.02-2.08-3.25.71-3.94-1.57-3.94-1.57-.53-1.34-1.29-1.7-1.29-1.7
                             -1.06-.72.08-.71.08-.71 1.17.08 1.78 1.2 1.78 1.2 1.04 1.77 2.73 1.26
                             3.39.97.1-.75.41-1.26.74-1.55-2.59-.3-5.31-1.3-5.31-5.77
                             0-1.27.46-2.3 1.2-3.11-.12-.3-.52-1.52.11-3.16 0 0 .98-.31 3.2 1.19a11.1 11.1
                             0 015.82 0c2.22-1.5 3.2-1.19 3.2-1.19.63 1.64.23 2.86.11 3.16.75.81
                             1.2 1.84 1.2 3.11 0 4.48-2.73 5.47-5.33 5.76.42.36.79 1.08.79 2.18
                             0 1.58-.01 2.85-.01 3.24 0 .31.21.67.8.56A11.5 11.5 0 0023.5 12
                             C23.5 5.65 18.35.5 12 .5z" />
                    </svg>

                    <span class="hidden sm:inline">GitHub</span>
                </a>

                <a href="mailto:dima.sychev.08@mail.ru"
                   class="flex items-center gap-1.5 hover:text-indigo-600 transition-colors">

                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                         viewBox="0 0 24 24">
                        <path d="M20 4H4a2 2 0 00-2 2v.01l10 6 10-6V6a2 2 0 00-2-2zm0 4.24l-7.4
                             4.44a2 2 0 01-2.2 0L4 8.24V18a2 2 0 002 2h12a2 2 0 002-2V8.24z" />
                    </svg>

                    <span class="hidden sm:inline">Email</span>
                </a>

            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
